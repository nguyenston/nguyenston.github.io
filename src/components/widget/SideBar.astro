---
import type { MarkdownHeading } from "astro";
import Categories from "./Categories.astro";
import Profile from "./Profile.astro";
import Tag from "./Tags.astro";

interface Props {
	class?: string;
	headings?: MarkdownHeading[];
	id?: string;
}

const { headings = [], class: className, id = "sidebar" } = Astro.props;
---
<div id={id} class:list={[className, "w-full"]}>
    <div id="profile" class="flex flex-col w-full gap-4 mb-4 lg:w-[17.5rem]">
        <Profile></Profile>
    </div>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky top-4 lg:w-[17.5rem]">
        <Categories class="onload-animation" style="animation-delay: 150ms"></Categories>
        <Tag class="onload-animation" style="animation-delay: 200ms"></Tag>
    </div>
</div>
